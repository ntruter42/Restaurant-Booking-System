<h1 class="title is-2">Bookings</h1>

{{#if error}}
<div class="notification is-danger is-light">
	{{!-- you can remove the button below if you want --}}
	<button type="button" class="delete"></button>
	{{error}}
	{{!-- <a href="https://bulma.io/documentation/elements/notification/">Read here if you wanna change the
		style</a> --}}
</div>
{{/if}}
{{#if success}}
<div class="notification is-success is-light">
	{{!-- you can remove the button below if you want --}}
	<button type="button" class="delete"></button>
	{{success}}
	{{!-- <a href="https://bulma.io/documentation/elements/notification/">Read here if you wanna change the
		style</a> --}}
</div>
{{/if}}

<form action="/bookings" method="post">
	<div class="field">
		<label class="label" for="">Bookings for</label>
		<input class="input is-normal is-2" type="text" name="username" placeholder="enter username">
	</div>
	<div class="field">
		<input class="button is-info" type="submit" value="Search">
	</div>
</form>

<table class="table is-fullwidth">
	<tr>
		<th>Table name</th>
		<th>Table capacity</th>
		<th>Booking size</th>
		<th>Booked by</th>
		<th>Contact number</th>
		<th></th>
	</tr>
	{{#each tables}}
	<tr>
		<td>{{table_name}}</td>
		<td>{{capacity}}</td>
		<td>{{number_of_people}}</td>
		<td>{{username}}</td>
		<td>0{{contact_number}}</td>
		<form action="/cancel/{{table_name}}" method="post">
			<td>
				<button class="button is-warning" name="reset">Cancel booking</button>
			</td>
		</form>
	</tr>
	{{/each}}
</table>