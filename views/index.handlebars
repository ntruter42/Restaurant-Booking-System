<form action="/book" method="post">

	<h2 class="title is-2">Book a table</h2>

	{{#if error}}
	<div class="notification is-danger is-light">
		{{!-- you can remove the button below if you want --}}
		<button type="button" class="delete"></button>
		{{error}}
		{{!-- <a href="https://bulma.io/documentation/elements/notification/">Read here if you wanna change the
			style</a> --}}
	</div>
	{{/if}}
	{{#if success}}
	<div class="notification is-success is-light">
		{{!-- you can remove the button below if you want --}}
		<button type="button" class="delete"></button>
		{{success}}
		{{!-- <a href="https://bulma.io/documentation/elements/notification/">Read here if you wanna change the
			style</a> --}}
	</div>
	{{/if}}


	<div class="columns">

		{{#each tables}}

		<div class="column">
			<div class="panel">
				<p class="panel-heading">
					{{table_name}}
				</p>
				<div class="panel-block">
					<div class="field is-horizontal">
						<div class="field-label is-normal">
							<img src="./images/table.png" width="80">
						</div>
					</div>
				</div>
				<div class="panel-block">

					<div class="field is-horizontal">
						<div class="field-label is-normal">

							<label class="label">Table capacity</label>
						</div>
						<div class="field-body">
							<div class="field">
								<p class="control">
									<input class="input is-static" type="email" value="{{capacity}}" readonly>
								</p>
							</div>
						</div>
					</div>
				</div>
				<div class="panel-block">

					<div class="control">
						{{#if booked}}
						<img src="./images/reserved.png" width="60">
						{{else}}
						<label class="radio">
							<input type="radio" value="{{table_name}}" name="tableName" id="tableName">
							Book this table
						</label>
						{{/if}}
					</div>


				</div>
			</div>
		</div>


		{{/each}}
	</div>

	<div class="columns">
		<div class="column is-3">
			<div class="field">
				<label for="" class="label">Number of people in booking</label>
				<div class="control">
					<input class="input" type="text" name="booking_size" required>
				</div>
			</div>
		</div>
		<div class="column is-3">
			<div class="field">
				<label for="" class="label">Username</label>
				<div class="control">
					<input class="input" type="text" name="username" required>
				</div>
			</div>
		</div>
		<div class="column is-3">
			<div class="field">
				<label for="" class="label">Phone number</label>
				<div class="control">
					<input class="input" type="text" name="phone_number" maxlength="10" minlength="10" required>
				</div>
			</div>
		</div>
	</div>

	<div class="field">
		<input class="button is-primary" type="submit" value="Book">
	</div>
</form>
</div>